@using Codestellation.Galaxy.WebEnd
@using Codestellation.Galaxy.WebEnd.Misc
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Codestellation.Galaxy.WebEnd.Models.OptionsModel>
@{ Layout = "Master";}
<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">Service settings</h3>
    </div>
</div>

<div class="row">
    <form class="form-horizontal" role="form" method="POST">
        @Html.LabeledTextBox(x => x.DeployFolder)
        @Html.LabeledTextBox(x => x.HostPackageFeedUri)
        @Html.LabeledTextBox(x => x.HostPackageId)
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" class="btn btn-success" value="Submit" />
            </div>
        </div>
    </form>
    <script>
        $(document).ready(function() {

            validateWithBootstrap();

            $('form').validate({
                rules: {
                    HostPackageFeedUri: {
                        required: true,
                        minlength: 5,
                        maxlength: 50,
                    }
                }
            });
        });
    </script>
</div>
