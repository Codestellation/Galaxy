@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Codestellation.Galaxy.Domain.DashBoard>
@{ Layout = "Master";}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Nuget feeds</h3>
        </div>
        <ul class="list-group">
            
            @if (Model.FeedCount == 0)
            {
                <li class="list-group-item">Be the first, add a feed!</li>
            }

            @foreach (var feed in Model.Feeds)
            {
                <a href="feed/edit/@feed.Id" class="list-group-item">
                    <h4 class="list-group-item-heading">@feed.Name (@feed.Uri)</h4>
                    <form action="/feed/delete/@feed.Id" method="POST">
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </form>
                </a>
            }
        </ul>
        <div class="panel-footer">
            <a class="btn btn-success" href="/feed/create">New</a>
        </div>
    </div>
</div>

