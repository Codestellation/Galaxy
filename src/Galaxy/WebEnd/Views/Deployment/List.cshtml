@using System.Collections.Generic;
@using System.Linq
@using Codestellation.Galaxy.WebEnd
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Codestellation.Galaxy.WebEnd.Models.DeploymentListModel>
@{ Layout = "Master";}
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3>Services</h3>
        </div>
        <ul class="list-group">
            
            @if (Model.Count == 0)
            {
                <li class="list-group-item">Add service</li>
            }
            else
            {
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Display name</th>
                            <th>Service name</th>
                            <th>Assembly-qualified type name</th>
                            <th>Feed name</th>
                            <th>Status</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var deployment in Model.Deployments)
                        {
                            <tr>
                                <td><a href="/@DeploymentModule.Path/details/@deployment.Id">@deployment.DisplayName</a></td>
                                <td>@deployment.ServiceName</td>
                                <td>@Model.AllFeeds.SingleOrDefault(x => x.Key == deployment.FeedId).Value</td>
                                <td>@deployment.Status</td>
                                <td>@deployment.Description</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </ul>
        <div class="panel-footer">
            <a class="btn btn-success" href="/@DeploymentModule.Path/create">New</a>
        </div>
    </div>
</div>

