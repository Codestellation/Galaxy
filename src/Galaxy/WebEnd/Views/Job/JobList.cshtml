@using Codestellation.Galaxy.WebEnd
@inherits Nancy.ViewEngines.Razor.NancyRazorViewBase<Codestellation.Galaxy.WebEnd.Models.Jobs.JobListModel>
@{ Layout = "Master";}

<div class="panel panel-default">
  <div class="panel-heading">
    <h3>Jobs</h3>
  </div>
  <ul class="list-group">

    @if (Model.Count == 0)
    {
        <li class="list-group-item">Nothing here!</li>
    }

    @foreach (var job in Model.Jobs)
    {
        <li class="list-group-item">
          <a href="/@JobModule.Path/edit/@job.Id">@job.Name</a>
          <button type="button" class="btn btn-danger btn-xs pull-right" value="@job.Id">
            <span class="glyphicon glyphicon-trash"></span>
          </button>
        </li>
    }
  </ul>
  <div class="panel-footer">
    <a class="btn btn-success" href="/@JobModule.Path/create">New</a>
  </div>
</div>


