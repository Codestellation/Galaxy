<?xml
    version="1.0"
    encoding="utf-8"?>

<nlog
    xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    autoreload="true">
    <variable
        name="debugLayout"
        value="${date:format=HH\:mm\:ss\:ffff} ${logger:shortName=true} ${level:uppercase=true} {${threadid} ${whenEmpty:whenEmpty=NoName:inner=${threadname}}}:${newline}${message} ${exception:format=ToString}" />

    <targets async="true">
        <target
            xsi:type="Console"
            name="console"
            layout="${debugLayout}" />

        <target
            name="file"
            xsi:type="File"
            fileName="Logs\Galaxy.${date:format=yyyy-MM-dd}.log"
            layout="${debugLayout}" />
    </targets>

    <rules>
        <logger
            name="Finam.*"
            minlevel="Debug"
            writeTo="console, file" />
    </rules>
</nlog>